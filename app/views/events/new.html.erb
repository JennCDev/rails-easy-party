<%= simple_form_for @event do |f| %>
  <%= f.input :title, label: 'Titre', as: :string %>
  <%= f.input :description, label: 'Description', as: :string %>
  <%= f.input :start_at, label: 'Date de début', as: :date %>
  <%= f.input :end_at, label: 'Date de fin', as: :date %>
  <%= f.input :place, label: 'Lieu', as: :string %>
  <%= f.input :photos, as: :file, input_html: { multiple: true }, class: "form-field" %>
  <%= f.submit 'Crée ton évènement' %>
<% end %>
