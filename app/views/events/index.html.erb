<h1>Mes évènements</h1>

<div data-controller="button">
  <%= render "shared/buttons/index_tabs_btns" %>
  <div data-button-target="next">
    <% if @next_events_without_date.present? %>
      <% @next_events_without_date.each do |next_event_without_date| %>
        <p><%= link_to next_event_without_date.title, event_path(next_event_without_date) %></p>
      <% end %>
    <% end %>
    <% if @next_events.present? %>
      <% @next_events.each do |next_event| %>
        <p><%= link_to next_event.title, event_path(next_event) %></p>
      <% end %>
    <% end %>
  </div>
  <div data-button-target="previous" class="d-none">
    <% if @previous_events.present? %>
      <% @previous_events.each do |previous_events| %>
        <p><%= link_to previous_events.title, event_path(previous_events) %></p>
      <% end %>
    <% end %>
  </div>
</div>
