<%# <h1 class="mt-4 mb-4 text-center easy-party-title"><i class="fa-solid fa-temperature-full"></i> EASY PARTY</h1> %>

<h1 class="mt-4 mb-4 text-center easy-party-title"><i class="fa-solid fa-fire"></i>

  <span class="first-letter"> E</span>
  <span class="second-letter">A</span>
  <span class="third-letter">S</span>
  <span class="fourth-letter">Y</span>
  <span class="fifth-letter"> </span>
  <span class="sixth-letter">P</span>
  <span class="seventh-letter">A</span>
  <span class="eighth-letter">R</span>
  <span class="ninth-letter">T</span>
  <span class="tenth-letter">Y</span>
</h1>



<div data-controller="button">
  <div class="d-flex justify-content-center">
    <%= render "shared/buttons/index_tabs_btns"%>
  </div>
  <div data-button-target="next" class="resize">
    <% if @next_events_without_date.present? || @next_events.present? %>
      <% if @next_events_without_date.present? %>
        <% @next_events_without_date.each do |next_event_without_date| %>
          <%= link_to event_path(next_event_without_date), class:"link-card" do %>
            <%= render "shared/cards/event", event: next_event_without_date %>
          <% end %>
        <% end %>
      <% end %>
      <% if @next_events.present? %>
        <% @next_events.each do |next_event| %>
          <%= link_to event_path(next_event), class:"link-card" do %>
            <%= render "shared/cards/event", event: next_event %>
          <% end %>
        <% end %>
      <% end %>
    <% else %>
      <p class="mt-5 text-center">Pas d'évènement à venir ☹️</p>
    <% end %>
  </div>
  <div data-button-target="previous" class="d-none">
    <% if @previous_events.present? %>
      <% @previous_events.each do |previous_events| %>
        <%= link_to event_path(previous_events), class:"link-card" do %>
          <%= render "shared/cards/event", event: previous_events %>
        <% end %>
      <% end %>
    <% else %>
      <p class="mt-5 text-center">Pas d'évènement passés ☹️</p>
    <% end %>
  </div>
</div>
