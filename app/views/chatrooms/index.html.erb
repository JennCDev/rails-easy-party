<h1 class="text-center">Talks</h1>

<div class="container_messages">
  <% @chatrooms.each do |chatroom_data| %>
    <div class="card">
      <%= link_to event_chatroom_path(chatroom_data[:chatroom].event), class: "card-link" do %>
        <% if chatroom_data[:chatroom].event.photo_banner.attached? %>
          <%= image_tag chatroom_data[:chatroom].event.photo_banner, class: "card-img" %>
        <% end %>
        <div class="card-info">
          <h5 class="card-title">
            <%= chatroom_data[:chatroom].name %>
          </h5>

        </div>
      <% end %>
    </div>
  <% end %>
</div>
