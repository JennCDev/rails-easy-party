<%# btn retour %>
<%= link_to :back do %>
  <i class="fa-solid fa-circle-chevron-left"></i>
<% end %>

<div class="container" data-controller="item">
<h2><%= @todo_list.title %></h2><br>

<%# liste des items/todos + logique de sélection avec avatars %>
<div class="items-list">
<% @todo_list.items.each do |item| %>
<div class="item-avatar d-flex">
  <% if current_user.user_items.exists?(item_id: item.id) %>
    <%= link_to item.content, item_user_item_path(item), class: "items done", data: {turbo_method: :delete} %>
  <% else %>
    <%= link_to item.content, item_user_items_path(item), class: "items", data: {turbo_method: :post} %>
  <% end %>
  <%# afficher l'avatar (voir pour en mettre pls) %>
      <% if item.user_items.first %>
        <% if item.user_items.first.user.avatar.attached? %>
          <%= image_tag url_for(item.user_items.first.user.avatar), class: "avatar" %>
        <% end %>
      <% end %>
  </div>
<% end %>
</div>

<%# aller récupérer les options dans new todo list %>
 <%= f.fields_for :options do |a| %>
      <div class="d-flex align-items-start input-spacing">
        <div class="d-flex btn-group input-spacing">
          <%= a.input :option,
            label: false,
            placeholder: "Option",
            as: :string,
            input_html: { data: {target: "option.options"} },
            class: "custom-input-for-option input-spacing"  %>
          <%= link_to "Valider", "",
          class: "validate-btn-small input-spacing",
          data: { action: "click->option#insertOptions" } %>
        </div>
      </div>
      <% end %>


<%# btn de validation %>
<div class="update-btn d-flex justify-content-center">
  <%= link_to "Valider", todo_list_path(@todo_list), class: "d-flex justify-content-center validate-btn", data: {turbo_method: :patch} %>
</div>
